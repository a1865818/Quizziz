@page
@model Quizziz.Pages.Questions.IndexModel
@{
	ViewData["Title"] = "Questions";
}
<h1>Question Management</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Question</a>
</p>

@if (!Model.Questions.Any())
{
    <div class="alert alert-info">
        No questions have been created yet. <a asp-page="Create">Create your first question</a>.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Questions</th>
                    <th>Answers</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Questions)
                {
                    <tr>
                        <td>@item.Text</td>
                        <td>@item.Answers.Count</td>
                        <td>@item.CreatedAt.ToString("g")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-page="./Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}