@page "{id:int}"
@model Quizziz.Pages.Quizzes.DeleteModel
@{
	ViewData["Title"] = "Delete Quiz";
}

<h1>Delete Quiz</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this quiz?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h4>@Model.Quiz.Title</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Quiz.Description) ? "No description" : Model.Quiz.Description)</dd>

            <dt class="col-sm-3">Time Limit</dt>
            <dd class="col-sm-9">@(Model.Quiz.TimeLimit.HasValue ? $"{Model.Quiz.TimeLimit} minutes" : "No time limit")</dd>

            <dt class="col-sm-3">Questions</dt>
            <dd class="col-sm-9">@Model.Quiz.QuizQuestions.Count</dd>

            <dt class="col-sm-3">Randomize Questions</dt>
            <dd class="col-sm-9">@(Model.Quiz.RandomizeQuestions ? "Yes" : "No")</dd>
        </dl>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Quiz.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
